{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3">
            <h4>Filtre :</h4>
            {{form(form)}}
        </div>
        <div class="col-md-9">
            <h1 class="text-center">Nos produits</h1>
            <hr class="w-50 mx-auto mb-3 bg-secondary">
            <div class="row product-container">
                {% for product in products %}
                <div class="col-md-4 mb-2 border rounded shadow">
                    <div class="product-item text-center">
                        <a href="{{ path('product', {slug: product.slug})}}">
                            <img src="/uploads/{{product.illustration}}" alt="image de {{product.price}}" class="img-fluid"/>
                        </a>
                        <h5>{{product.name}}</h5>
                        <span class="product-subtitle">{{product.subtitle}}</span>
                        <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }}  â‚¬</span>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    

    
{% endblock %}
